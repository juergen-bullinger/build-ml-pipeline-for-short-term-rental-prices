name: data_split
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: Input artifact
        type: string

      test_size:
        description: Test size (ratio) 
        type: float 

      val_size:
        description: Validation size (ratio) 
        type: float

    command: >-
        python run.py  --val_size {val_size}  --test_size {test_size}  --input_artifact {input_artifact}
