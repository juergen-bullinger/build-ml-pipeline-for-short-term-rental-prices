name: data_split
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: Input artifact
        type: string

      val_size:
        description: Size of the validation set
        type: float

      test_size:
        description: Size of the test set
        type: float

    command: >-
        python run.py  --val_size {val_size}  --test_size {test_size}  --input_artifact {input_artifact}
