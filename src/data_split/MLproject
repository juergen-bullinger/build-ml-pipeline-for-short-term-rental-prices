name: data_split
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: Input artifact
        type: string

      test_size:
        description: Test size (ratio) 
        type: float 

      val_size:
        description: Validation size (ratio) 
        type: float

      random_seed:
        description: Seed for the random number generator 
        type: int

      stratify_by:
        description: Name of the column by which the split is statified
        type: string

    command: >-
        python run.py \
            --val_size {val_size} \
            --test_size {test_size} \
            --input_artifact {input_artifact} \
            --random_seed {random_seed} \
            --stratify_by {stratify_by}
